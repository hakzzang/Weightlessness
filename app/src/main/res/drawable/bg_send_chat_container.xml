<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
                android:shape="rectangle">

            <corners android:radius="64dp" />
            <gradient
                    android:angle="270"
                    android:endColor="#10000000"
                    android:startColor="#00000000" />
        </shape>
    </item>
    <item
            android:top="-2dp"
            android:left="-2dp"
            android:bottom="2dp"
            android:right="2dp">
        <shape
                android:shape="rectangle">

            <corners android:radius="64dp" />
            <solid android:color="@color/white_color_00" />
        </shape>
    </item>

</layer-list>
